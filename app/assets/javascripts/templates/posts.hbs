<h1>Posts</h1>

<ul>
  {{#each post in controller}}
    <li>
        {{#link-to "post" post}}
            {{post.title}}
        {{/link-to}}
    </li>
  {{else}}
    <li>There are no posts.</li>
  {{/each}}
</ul>

<div>
    {{#link-to "post.new"}}
        <button class="btn btn-primary" type="button">New post</button>
    {{/link-to}}
</div>
