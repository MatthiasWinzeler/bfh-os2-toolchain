<div class="form-group">
  <label class="control-label col-lg-2" for="inputTitle">Title</label>
  <div class="col-lg-10">
  {{view Ember.TextField value=title id="inputTitle" classNames="form-control"}}
  </div>
</div>
<div class="form-group">
  <label class="control-label col-lg-2" for="textareaDescription">Description</label>
  <div class="col-lg-10">
  {{view Ember.TextArea value=body classNames="form-control" id="textareaBody"}}
  </div>
</div>
<input type="hidden" {{bind-attr value=id}} id="id"/>
