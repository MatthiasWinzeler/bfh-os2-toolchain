BfhOs2Toolchain.PostDeleteController = Ember.ObjectController.extend
  isEditing: false

  actions:
    edit: ->
      @set "isEditing", true

    delete: ->
      if (window.confirm("Are you sure you want to delete this post?"))
        @get('content').deleteRecord()
        @get('store').commit()
        @transitionToRoute('posts')

    doneEditing: ->
      @set "isEditing", false
      @get('store').commit()
